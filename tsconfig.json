{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "commonjs",
		"target": "es2015",
		"lib": ["es2015", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": false,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	],
	"types": [
		"typePatches"
	]
}
